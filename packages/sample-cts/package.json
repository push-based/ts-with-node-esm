{
  "name": "sample",
  "private": true,
  "version": "1.0.0",
  "description": "The sample project.",
  "type": "CommonJs",
  "scripts": {
    "start": "npm run build && node lib/index.js",
    "exec:npx:esm": "npm run build && npx esm ./lib/index.js",
    "exec:npx": "npm run build && npx ./lib --experimental-modules --es-module-specifier-resolution=node",
    "exec:node": "npm run build && node lib/index.js",
    "build": "tsc -p tsconfig.build.json",
    "build:test": "tsc -p tsconfig.test.json --sourcemap",
    "test:only": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test": "pnpm build:test && pnpm test:only",
    "test:coverage": "pnpm run test --coverage"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.17",
    "jest": "^29.3.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "lighthouse": "^10.0.2",
    "puppeteer": "^19.7.3"
  }
}
