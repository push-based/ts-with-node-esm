{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "lib",
    "declaration": true,
    "allowJs": true,
    "importHelpers": true,
    "target": "esnext",
    "moduleResolution": "nodenext",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "types": ["node", "jest"],
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src"
  ]
}
